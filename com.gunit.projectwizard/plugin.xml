<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="com.gunit.projectwizard"
         name="Gunit Project Wizard"
         point="org.eclipse.ui.newWizards">
      <category
            id="com.gunit.projectwizard.gunit"
            name="Gunit Projects">
      </category>
      <wizard
            category="com.gunit.projectwizard.gunit"
            class="com.gunit.projectwizard.UnitTestProjectWizard"
            descriptionImage="icons/accept.gif"
            finalPerspective="com.gunit.projectwizard.unittest.perspective"
            icon="icons/tick.png"
            id="com.gunit.projectwizard.unittest"
            name="Unit Test">
      </wizard>
   </extension>
   <extension
         id="com.gunit.projectwizard.unittestprojectnature"
         name="Unit Test Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="com.gunit.projectwizard.UnitTestProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         id="com.gunit.unittest.perspecive"
         name="Gunit Unit Test Perspective"
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.gunit.projectwizard.PerspectiveFactory"
            icon="icons/accept.gif"
            id="com.gunit.projectwizard.unittest.perspective"
            name="Gunit Unit test Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="org.eclipse.ui.navigator.ProjectExplorer"
               minimized="false"
               ratio="0.25"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <newWizardShortcut
               id="com.gunit.projectwizard.unittest">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>

</plugin>
